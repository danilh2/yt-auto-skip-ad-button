{
	"manifest_version": 3,
	"name": "Youtube Ad Button Skip",
	"version": "1.0",
	
	"description": "Youtube ads will be skipped automatically in less than a second.",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	
	"author": "Dani Lobera",
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run-at": "document_idle",
			"js": ["script.js"]
		}
	],
	
	"permissions": [
		"tabs",
		"activeTab"
	]
}
